{
  "compilerOptions": {
    "target": "ES6", // Modern JavaScript output (ES6+)
    "module": "CommonJS", // For Node.js backend (Express)
    "lib": ["DOM", "ES6"], // DOM for React, ES6 features
    "jsx": "react-jsx", // React JSX support (new JSX transform)
    "moduleResolution": "node", // Node.js-style module resolution
    "esModuleInterop": true, // Default import for CommonJS modules (e.g express)
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable strict type checking
    "skipLibCheck": true, // Skip type checking of node_modules libs to speed up compilation
    "noImplicitAny": true, // Warn if any implicit any types found
    "allowJs": true, // Allow JavaScript files in the project
    "resolveJsonModule": true, // Allows importing JSON files
    "outDir": "./dist", // Output folder for backend transpiled code
    "rootDir": "./src", // Root folder for source typescript files
    "sourceMap": true, // Useful for debugging (TS <-> JS mapping),
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
